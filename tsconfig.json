{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": [
    "lib",
    "node_modules",
    "src/**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}